<div class="container border-bottom my-3">
<h1>Edit <%= @task.title %></h1>

  <div class="container my-3">
    <%= form_with model: @task do |f| %>
    <div class="mb-3">
      <%= f.label :title, class: "form-label" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :details, class: "form-label"  %>
      <%= f.text_field :details, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :completed, 'Completed' %>
      <%= f.check_box :completed%>
    </div>
    <%= f.submit 'Update Task', class: "btn btn-primary mb-3"  %>
    <% end %>
  </div>
</div>
<div class="container">
  <%= link_to tasks_path, class: "text-decoration-none" do %>
  <i class="fa-solid fa-rotate-left"></i> Back to list
  <% end %>
</div>
