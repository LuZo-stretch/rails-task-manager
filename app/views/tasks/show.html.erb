<div class="container my-4">
  <div class="d-flex align-items-center">
  <h1 class="me-4">Task: <%= @task.title %></h1>

  <%= link_to edit_task_path(@task), class: "btn btn-outline-dark ms-5" do %>
  <i class="fa-solid fa-pencil"></i> Edit this task
  <% end %>
  </div>

  <p class="details">Details: <%= @task.details%></p>
  <% if @task.completed %>
    <p><i class="fa-regular fa-square-check"></i> This task is complete</p>
  <% else %>
    <p><i class="fa-regular fa-square"></i> This task is not completed</p>
  <% end %>

  <%= link_to "Back to list", tasks_path, class: "text-decoration-none" %>
</div>
